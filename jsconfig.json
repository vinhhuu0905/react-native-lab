{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react-native",
        "lib": [
            "es6"
        ],
        "moduleResolution": "node",
        "noEmit": true,
        "strict": true,
        "target": "esnext",
        "noImplicitAny": false,
        "baseUrl": "./src",
        "paths": {
            "@app": [
                "/"
            ],
            "@app/*": [
                "/*"
            ],
            "@screens": [
                "screens"
            ],
            "@screens/*": [
                "screens/*"
            ],
            "@utils": [
                "utils"
            ],
            "@utils/*": [
                "utils/*"
            ],
            "@assets": [
                "assets"
            ],
            "@assets/*": [
                "assets/*"
            ],
            "@components": [
                "components"
            ],
            "@components/*": [
                "components/*"
            ],
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js"
    ]
}